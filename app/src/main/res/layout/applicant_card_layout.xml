<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <LinearLayout
        android:id="@+id/dataHolder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="20dp"
            android:text="@string/name"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:layout_marginBottom="6dp"
            android:drawableLeft="@drawable/ic_title"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="20dp"
            android:text="@string/location"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="20dp"
            android:text="@string/birthday"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:drawableLeft="@drawable/ic_date"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/applicationStatus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="20dp"
            android:text="@string/application_status"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:drawableLeft="@drawable/ic_status"
            android:drawablePadding="5dp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <LinearLayout
            android:id="@+id/buttonHolder"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:minHeight="20dp">

            <TextView
                android:id="@+id/startChatButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/start_a_chat"
                android:textSize="16dp"
                android:textAllCaps="true"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textColor="@color/primary_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/acceptButton"
                android:text="@string/accept"
                android:textSize="16dp"
                android:textAllCaps="true"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textColor="@color/primary_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rejectButton"
                android:text="@string/reject"
                android:textSize="16dp"
                android:textAllCaps="true"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textColor="@color/cancel_or_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>